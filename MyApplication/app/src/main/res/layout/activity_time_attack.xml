<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffcc58"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/back"
                android:layout_gravity="left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_pause"/>

            <TextView
                android:id="@+id/Score"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Score : 0"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:background="#ffdd47"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Num1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="60sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/dap"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:text='dap'
                android:textSize="60sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Num2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="60sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:background="#3174ff"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_alarm_black_24dp"/>

            <TextView
                android:id="@+id/Time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="60sp"/>
        </LinearLayout>

        <LinearLayout
            android:background="#7dd147"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:onClick="onClick"
                android:background="#00000000"
                android:id="@+id/Btn1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text='1'
                android:textSize="60sp"
                android:gravity="center"/>

            <Button
                android:onClick="onClick"
                android:background="#00000000"
                android:id="@+id/Btn2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text='2'
                android:textSize="60sp"
                android:gravity="center"/>

            <Button
                android:onClick="onClick"
                android:background="#00000000"
                android:id="@+id/Btn3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text='3'
                android:textSize="60sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/GG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFail"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:background="#777"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GG"
                android:textSize="70sp"/>
            <TextView
                android:id="@+id/text_Score"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="score"
                android:textSize="50sp"/>

            <Button
                android:id="@+id/Btn_finish"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="Back To MainMenu"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>